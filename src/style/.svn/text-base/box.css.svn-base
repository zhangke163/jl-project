.Controllayer label{
        margin-right: 4px;
        padding-top: 10px;
    }
        .Controllayer label i {
			height: 14px;
			width: 14px;
			display: inline-block;
		}

		.Controllayer label span {
			height: 38px;
			display: inline-block;
			color:#4cc3ff;
			position: relative;
			/*top:-2px;*/
		}


		.Controllayer label {
			cursor: pointer;
		}

		.Controllayer label i {
			font-size: 12px;
			font-style: normal;
			display: inline-block;
			/*width: 12px;
			height: 12px;*/
			text-align: center;
			line-height: 14px;
			color: #fff;
			vertical-align: middle;
			margin: 0px 5px;
			border:  #0055ee 1px solid;
		}

		.Controllayer input[type="checkbox"],
		.Controllayer input[type="radio"] {
			display: none;
		}

		.Controllayer input[type="radio"]+i {
			border-radius: 7px;
		}

		.Controllayer input[type="checkbox"]:checked+i,
		 .Controllayer input[type="radio"]:checked+i {
			background:rgba(17,75,162,0.85);
		}

		.Controllayer input[type="checkbox"]:disabled+i,
		.Controllayer input[type="radio"]:disabled+i {
			border-color: #ccc;
		}

		.Controllayer input[type="checkbox"]:checked:disabled+i,
		.Controllayer input[type="radio"]:checked:disabled+i {
			background: #ccc;
		}