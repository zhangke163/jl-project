html {
    width: 100%;
    height: 100%;
    background-image: linear-gradient(0deg, #429ce9 0%, #499df4 42%, #509eff 100%);
}

body {
    width: 100%;
    height: 100%;
    position: relative;
}

.img-bg {
    position: absolute;
    width: 1200px;
    height: 668px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: url(res/portal-bg.png) center center no-repeat;
}

.btn-box {
    position: absolute;
    top: 26px;
    right: 0;
}

.btn-box button {
    position: relative;
    width: 90px;
    float: left;
    height: 40px;
    background-color: #4790ea;
    border-radius: 3px;
    border: solid 1px #82b4f1;
    color: #fff;
    cursor: pointer;
    transition: all 0.3s ease 0s;
}

.btn-box button:nth-child(1) {
    margin-right: 10px;
}

.btn-box button:hover {
    background-color: #82b4f1;
}

.btn-box button:active {
    top: 1px;
}

.chose {
    color: #fff;
    position: absolute;
    top: 140px;
    left: 0;
}

.chose>span {
    display: inline-block;
    font-size: 20px;
    font-weight: 700;
}

.span-left {
    position: relative;
    top: 2px;
    width: 84px;
    height: 16px;
    background: url(res/chose-left.png) center center no-repeat;
    background-size: 100% auto;
}

.span-right {
    position: relative;
    top: 2px;
    width: 84px;
    height: 16px;
    background: url(res/chose-right.png) center center no-repeat;
    background-size: 100% auto;
}

.chose-text {
    padding: 0 20px;
}

.portal-box {
    position: absolute;
    width: 319px;
    height: 389px;
    top: 192px;
    left: 0;
    background: url(res/chose-box.png) center center no-repeat;
}

.portal-footer {
    position: absolute;
    text-align: right;
    bottom: 80px;
    right: 10px;
}

.portal-footer>div {
    margin-top: 8px;
    color: #d2e3f4;
}

.portal-box>div {
    position: relative;
    width: 100%;
    height: 100%;
}

.portal-box>div a {
