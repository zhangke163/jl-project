html,body{
	width:100%;
	height: 100%;
}
#cons{
	width:100%;
	height: calc(100% - 130px);
	background: #F2F2F2;
}
#cons .layui-row{
	width: calc(100% - 30px);
	height: 100%;
}
#cons .layui-row .layui-card{
	width: 100%;
	height: 100%;
}
#cons .layui-row .layui-card .layui-col-md12{
	width:100%;
	height: 100%;
	background: #FFFFFF;
}
.copyright{
	width:100%;
	height: 30px;
	box-shadow: 0px 1px 0px 0px 
	rgba(224, 224, 224, 0.3);
	font-size: 14px;
	color: #888888;
	background: #fff;
	line-height: 30px;
	text-align: center;
	position: absolute;
	bottom: 0;
	left: 0;
}