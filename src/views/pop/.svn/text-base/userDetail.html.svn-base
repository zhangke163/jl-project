<title>查看详情页面</title>
<meta name="renderer" content="webkit">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
<link rel="stylesheet" href="../../../start/layui/css/layui.css" media="all">
<link rel="stylesheet" href="../../../src/style/userDetail.css" media="all">
<form class="layui-form box" action="" lay-filter='formDemo'>
	<div class="layui-form-item" style='margin-top:15px;width:100%;'>
	    <label class="layui-form-label">用户名</label>
	    <div class="layui-input-block">
	      <input type="text" name="username"  id='username' autocomplete="off" class="layui-input">
	    </div>
	</div>
	<div class="layui-form-item">
	    <label class="layui-form-label">所属单位</label>
	    <div class="layui-input-block">
	      <select name="department" id='department' >
			<option value=""></option>
	        <option value="市政管理处">市政管理处</option>
	        <option value="自来水公司">自来水公司</option>
	        <option value="开发区">开发区</option>
	        <option value="其他">其他</option>
	      </select>
	    </div>
	</div>
	<div class="layui-form-item">
	    <label class="layui-form-label">用户角色</label>
	    <div class="layui-input-block">
	       <select name="role" id='role'>
				<option value="">请选择用户角色</option>
	      </select>
	    </div>
	</div>
	<div class="layui-form-item">
	    <label class="layui-form-label">联系电话</label>
	    <div class="layui-input-block">
	      <input type="text" name="mobile" id='mobile' autocomplete="off" class="layui-input">
	    </div>
	</div>
	<div class="layui-form-item">
	    <label class="layui-form-label">姓名</label>
	    <div class="layui-input-block">
	      <input type="text" name="realName"  id='realName' autocomplete="off" class="layui-input">
	    </div>
	</div>
	<div class="layui-form-item">
	    <label class="layui-form-label">性别</label>
	    <div class="layui-input-block">
	      <input type="text" name="gender"  id='gender' autocomplete="off" class="layui-input">
	    </div>
	</div>
	<div class="layui-form-item">
	    <label class="layui-form-label">年龄</label>
	    <div class="layui-input-block">
	      <input type="text" name="age"  id='age' autocomplete="off" class="layui-input">
	    </div>
	</div>
	<div class="layui-form-item" id='btns-box'>
		<button class="layui-btn right" lay-submit id='confirmBtn' style='background: #0095ff;'>确认</button>  
		<button type="layui-btn" class="layui-btn layui-btn-primary right" id ='clearBtn'>取消</button>
	</div>
</form>
<script src="../../lib/jquery.js"></script>
<script src="../../../start/layui/layui.all.js"></script>
<script src="../../config.js"></script>
<script src="../../../src/controller/userDetail.js"></script>